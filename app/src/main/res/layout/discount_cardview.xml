<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dimen_8"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:layout_marginStart="@dimen/dimen_8"
    android:layout_marginEnd="@dimen/dimen_8"
    android:layout_marginBottom="@dimen/dimen_8"
    android:layout_marginTop="@dimen/dimen_8"
    app:cardBackgroundColor="@color/md_theme_light_primaryContainer"
    app:cardPreventCornerOverlap="true"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/discount_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Black Friday Discount" />

        <TextView
            android:id="@+id/discount_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discount_status"
            android:text="Use promo code : 45JGH" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/discount_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Your Order"
            android:layout_margin="@dimen/dimen_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discount_code" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/discount_food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/dimen_8"
            android:scaleType="fitCenter"
            app:shapeAppearance="@style/ShapeAppearance.CircularBorder"
            android:src="@drawable/burger2"
            android:backgroundTint="@color/md_theme_light_primaryContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>